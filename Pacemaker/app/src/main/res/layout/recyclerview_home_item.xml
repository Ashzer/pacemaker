<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rvHomeItem_main_clo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#80dddddd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/rvHomeItem_part_iv"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@string/image_not_found"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rvHomeItem_name_tv"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

        <TextView
            android:id="@+id/rvHomeItem_name_tv"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ff000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvHomeItem_part_iv"
            app:layout_constraintEnd_toStartOf="@+id/rvHomeItem_mass_tv"/>


        <TextView
            android:id="@+id/rvHomeItem_mass_tv"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="100kg"
            android:textSize="15sp"
            android:textColor="#ff000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvHomeItem_name_tv"
            app:layout_constraintEnd_toStartOf="@+id/rvHomeItem_set_tv"/>


        <TextView
            android:id="@+id/rvHomeItem_set_tv"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="10set"
            android:textSize="15sp"
            android:textColor="#ff000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvHomeItem_mass_tv"
            app:layout_constraintEnd_toStartOf="@+id/rvHomeItem_interval_tv"/>


        <TextView
            android:id="@+id/rvHomeItem_interval_tv"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="100s"
            android:textSize="15sp"
            android:textColor="#ff000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvHomeItem_set_tv"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>