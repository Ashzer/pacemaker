<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OpenSource.OpenSourceFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fOpenSource_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


            <TextView
                android:id="@+id/fOpenSource_tv_apache_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Apache 2.0 License"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/fOpenSource_tv_apache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apache_2.0_license" />

            <TextView
                android:id="@+id/fOpenSource_tv_mit_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="MIT License"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fOpenSource_tv_mit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mit_license" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>