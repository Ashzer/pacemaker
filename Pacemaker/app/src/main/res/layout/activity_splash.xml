<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".core.navigation.SplashActivity"
    android:background="@drawable/asplash_img_background">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="195dp"
        app:srcCompat="@drawable/asplash_img_symbol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        android:contentDescription="@string/image_not_found" />
    
    <ImageView
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_marginBottom="35dp"
        app:srcCompat="@drawable/asplash_img_devjj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/image_not_found"/>

</androidx.constraintlayout.widget.ConstraintLayout>