<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rvPlayPopupItem_clo_main"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#80dddddd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/rvPlayPopupItem_cb_achivement"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:scaleX="1.1"
            android:scaleY="1.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rvPlayPopupItem_tv_name"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

        <TextView
            android:id="@+id/rvPlayPopupItem_tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#ff000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvPlayPopupItem_cb_achivement"
            app:layout_constraintEnd_toStartOf="@+id/rvPlayPopupItem_tv_mass"/>


        <TextView
            android:id="@+id/rvPlayPopupItem_tv_mass"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="100kg"
            android:textSize="13sp"
            android:textColor="#ff000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvPlayPopupItem_tv_name"
            app:layout_constraintEnd_toStartOf="@+id/rvPlayPopupItem_tv_rep"/>

        <TextView
            android:id="@+id/rvPlayPopupItem_tv_rep"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="100rep"
            android:textSize="13sp"
            android:textColor="#ff000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvPlayPopupItem_tv_mass"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>